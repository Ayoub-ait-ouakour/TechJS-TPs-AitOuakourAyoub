//- views/books.pug
extends layout

block content
  .min-h-screen.bg-gradient-to-br.from-blue-50.to-indigo-100.py-8.px-4
    .max-w-6xl.mx-auto
      //- Header
      .bg-white.rounded-lg.shadow-md.p-6.mb-8.flex.justify-between.items-center
        div
          h1.text-3xl.font-bold.text-gray-800 Book Library
          p.text-gray-600.mt-1 Welcome, #{user.username}!
        a.bg-red-600.hover:bg-red-700.text-white.font-semibold.py-2.px-6.rounded-lg.transition.duration-200(
          href="/logout"
        ) Logout
      
      //- Books Grid
      .grid.grid-cols-1.md:grid-cols-2.lg:grid-cols-3.gap-6
        each book in books
          .bg-white.rounded-lg.shadow-lg.p-6.hover:shadow-xl.transition.duration-300.transform.hover:-translate-y-1
            .flex.items-start.justify-between.mb-4
              .bg-blue-600.text-white.rounded-full.w-12.h-12.flex.items-center.justify-center.font-bold.text-lg
                = book.id
              .text-gray-400.text-sm= book.year
            
            h2.text-xl.font-bold.text-gray-800.mb-2= book.title
            p.text-gray-600.text-sm.mb-4
              span.font-semibold by 
              = book.author
            
            .border-t.border-gray-200.pt-4
              .flex.items-center.justify-between
                span.text-xs.text-gray-500.uppercase.font-semibold Published
                span.text-sm.font-bold.text-blue-600= book.year
      
      //- Empty state (if no books)
      if books.length === 0
        .bg-white.rounded-lg.shadow-md.p-12.text-center
          p.text-gray-600.text-lg No books available at the moment.