//- views/register.pug
extends layout

block content
  .flex.items-center.justify-center.min-h-screen.px-4
    .bg-white.rounded-lg.shadow-xl.p-8.w-full.max-w-md
      h1.text-3xl.font-bold.text-center.text-gray-800.mb-6 Create Account
      
      if error
        .bg-red-100.border.border-red-400.text-red-700.px-4.py-3.rounded.mb-4(role="alert")
          p.text-sm= error
      
      form(method="POST" action="/register")
        .mb-4
          label.block.text-gray-700.text-sm.font-semibold.mb-2(for="username") Username
          input#username(
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            type="text"
            name="username"
            placeholder="Enter username"
            required
          )
        
        .mb-4
          label.block.text-gray-700.text-sm.font-semibold.mb-2(for="email") Email
          input#email(
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            type="email"
            name="email"
            placeholder="Enter email"
            required
          )
        
        .mb-4
          label.block.text-gray-700.text-sm.font-semibold.mb-2(for="password") Password
          input#password(
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            type="password"
            name="password"
            placeholder="Enter password"
            required
          )
        
        .mb-6
          label.block.text-gray-700.text-sm.font-semibold.mb-2(for="confirmPassword") Confirm Password
          input#confirmPassword(
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            type="password"
            name="confirmPassword"
            placeholder="Confirm password"
            required
          )
        
        button(
          class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-4 rounded-lg transition duration-200"
          type="submit"
        ) Register
      
      .mt-6.text-center
        p.text-gray-600.text-sm
          | Already have an account? 
          a(class="text-blue-600 hover:text-blue-800 font-semibold" href="/login") Login here